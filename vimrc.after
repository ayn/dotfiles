colorscheme railscasts
set guioptions-=T
set guioptions-=rL
set nonumber
nmap <silent> <leader>d <Plug>DashSearch
let g:dash_map = {
    \ 'ruby'       : 'rails',
    \ 'python'     : 'python2',
    \ 'javascript' : 'backbone'
    \ }
if exists(":Tabularize")
  xmap <leader>t :Tabularize /:/r0c1l0<CR>
endif

set tabstop=2 shiftwidth=2 expandtab
set gfn=AnonymousPro:h15
